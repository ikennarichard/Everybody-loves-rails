
<section>
  <div>
    <span class='post_details'>
      <h2> Post #<%=@post.id%> by <%=@user.name%> </h2>
      <p>Comments: <%=@post.comments_counter%>,</p>
      <p>Likes: <%=@post.likes_counter%></p>
    </span>

  <p>Post: <%=@post.text%></p>
  <%= render 'shared/like'%>
  </div>
   <div>
   <b>Comments</b>
    <%@post.comments.each do |comment|%>
      <p><%=@user.name%>: <%=comment.text%></p>
      <%end%>
    <button>
    <%= link_to 'Add new comment', new_comment_path %>
    </button>
    </div>
   
</section>
