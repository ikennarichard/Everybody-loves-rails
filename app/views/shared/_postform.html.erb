<div class='post_form_container'>
  <%= form_with model: @post, url:create_post_path, local:true do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
  
    <%= form.label :text %>
    <%= form.text_area :text %>
  
    <%= form.submit 'Create Post', class: 'post_submit_btn'%>
  <% end %>
</div>
